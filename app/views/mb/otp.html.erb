<style>
  body{
    background-color: #1A8367;
  }
</style>
<div class="container">
  <div class="container">
    <div class="row px-3">
      <div class="col-lg-10 col-xl-9 card flex-row mx-auto px-0">
        <div class="img-left d-none d-md-flex">
          <%= image_tag('5141092.jpg',alt: "logo", id: "logo-img", class: "login-img") %>
        </div>

        <div class="card-body">
          <h4 class="title text-center mt-4">
           Enter the 6 Digit Code
          </h4>
          <p class="text-success"><%= flash[:notice] %></p>
          <form class="form-box px-3" action="/verify_otp" method="post">
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
            <div class="form-input">
              <span><i class="fa-solid fa-envelope icns"></i></span>
              <input type="number" name="otp" placeholder="Enter otp" tabindex="10" required>
            </div>
            <div><p class="text-danger"><%= flash[:error] %></p></div>
            <div class="mb-3">
            </div>

            <div class="mb-3 d-inline-flex">
              <button type="submit" class="btn btn-block ">
               Verify
              </button> &nbsp;&nbsp;
              <button type="submit" class="btn btn-block ">
                Cancel
              </button>
            </div>
       
      
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag 'reg-login' %>


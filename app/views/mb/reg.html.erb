<style>
  body{
    background-color: #1A8367;
  }
  #logo-img{
    height:610px;
  }
</style>

<div class="container">
  <div class="row px-3">
    <div class="col-lg-10 col-xl-9 card flex-row mx-auto px-0">
      <div class="img-left d-none d-md-flex">
        <%= image_tag('reg.png',alt: "logo", id: "logo-img", class: "reg-img" ) %>
      </div>

      <div class="card-body">
        <h4 class="title text-center mt-4">
          Register
        </h4>
        <form class="form-box px-3" action="/create_new_user" method="post">
         <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
          <div class="form-input">
            <span><i class="fa-solid fa-user icns"></i></span>
            <input type="text" name="users[name]" placeholder="Username" tabindex="10" required>
          </div>

          <div class="form-input">
            <span><i class="fa-solid fa-envelope icns"></i></span>
            <input type="email" name="users[email]" placeholder="Mail Address" tabindex="10" required>
          </div>
          <div class="form-input">
            <span><i class="fa-solid fa-key icns"></i></span>
            <input type="password" id="password" name="users[password]" placeholder="Create Password" required>
          </div>

          <div class="form-input">
            <span><i class="fa-solid fa-key icns"></i></span>
            <input type="password" id="cpassword" placeholder="Confirm Password" required>
          </div>
          <div><p class="text-danger"><%= flash[:error] %></p></div>
          <div class="mb-3">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="show-pass-cb">
              <label class="custom-control-label">Show password</label>
            </div>
          </div>

          <div class="mb-3">
            <button type="submit" class="btn btn-block" >
              Register
            </button>
          </div>

          <div class="text-right">
            <a href="#" class="forget-link">
              Forgot Password?
            </a>
          </div>



          <hr class="my-4">
          <div class="text-center mb-2">
            Already have an account?
            <a href="/login" class="register-link">
              Signin
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'reg-login' %>
